<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cite.ansteph.beerly.view.beerlylover.event.EventDetails"
    tools:showIn="@layout/activity_event_details">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cite.ansteph.beerly.customview.diagonallayout.DiagonalLayout
            android:id="@+id/diagonalLayout"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:elevation="0dp"
            app:diagonal_angle="8"
            app:diagonal_direction="right"
            app:diagonal_position="bottom"
            >


            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/mainPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bridge_brewery"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="30dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/arclayout_rogue_logo"
                    />

            </FrameLayout>


        </cite.ansteph.beerly.customview.diagonallayout.DiagonalLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="350dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-light"
            android:elevation="24dp"
            android:text="The bar"
            android:textColor="#3A3A3A"
            android:id="@+id/txtestName"
            android:textSize="25sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagonalLayout"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="20dp"
            >



            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:fontFamily="sans-serif"
                android:text="@string/arclayout_description"
                android:textColor="#979696"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="Address"
                android:textColor="#3A3A3A"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:fontFamily="sans-serif"
                android:id="@+id/txtaddress"
                android:text="1 Bridge St, South End, Port Elizabeth, 6001"
                android:textColor="#979696"
                android:textSize="15sp"
                />


            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="Speciality"
                android:textColor="#3A3A3A"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:fontFamily="sans-serif"
                android:text="Craft Beers"
                android:id="@+id/txtspeciality"
                android:textColor="#979696"
                android:textSize="15sp"/>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
