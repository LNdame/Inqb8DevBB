<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cite.ansteph.beerly.view.beerlylover.affiliate.JoinAffiliate"
    tools:showIn="@layout/activity_join_affiliate">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:text="How to join?" />
        <TextView
            android:layout_marginBottom="16dp"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"
            android:text="@string/affiliate_explain" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:text="@string/affiliate_join_step" />


        <Button
            android:id="@+id/btnJoinProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/buttonbg"
            android:onClick="onJoinClicked"
            android:elevation="15dp"
            android:layout_marginTop="@dimen/activity_padding_horizontal"

            android:text="Yes, I want to to join the program" />



        <Button
            style="@style/button_style"
            android:id="@+id/btnRefuseJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"

            android:onClick="onRefuseClicked"
            android:elevation="15dp"
            android:layout_marginTop="@dimen/activity_padding_horizontal"

            android:text="No, I am happy with just free beer" />


        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telegram group link" />

        <TextView
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/affiliate_telegram" />



        <TextView
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/affiliate_disclaimer" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
